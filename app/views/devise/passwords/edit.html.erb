<div class="container">


  <h2>Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="form-group">
      <label for="input_password">Password</label>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "input_password", placeholder: "Password..." %>
    </div>

    <div class="form-group">
      <label for="input_password_confirmation">Password</label>
      <%= f.password_field :password_confirmation, autocomplete: "current-password", class: "form-control", id: "input_password_confirmation", placeholder: "Password..." %>
    </div>

    <div class="actions">
      <%= f.submit "Change my password", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>