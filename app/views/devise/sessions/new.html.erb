<div class="container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <label for="input_email">Email</label>
      <%= f.email_field :email,autocomplete: "email",  class: "form-control", id: "input_email", placeholder: "Email..." %>
      <small id="emailHelp" class="form-text text-muted">We use your mail only for registration</small>
    </div>
    <div class="form-group">
      <label for="input_password">Password</label>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "input_password", placeholder: "Email..." %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-check">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-primary"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

