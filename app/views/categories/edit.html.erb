<div class="container">
  <h2>Редагувати категорію</h2>
  <% if @category.errors.any? %>
    <% @category.errors.full_messages.each do |error| %>
      <p class="alert alert-danger"><%= error %></p>
    <% end %>
  <% end %>
  <%= form_for :category, url: category_path(@category),method: :patch do |f| %>
    <div class="form-group">
      <label for="InputTitle">Назва категорії</label>
      <%= f.text_field :name, class: "form-control", id: "InputTitle", placeholder: "Введіть назву категорії", value:@category.name %>
    </div>
    <%= f.submit "Редагувати категорію", class: "btn btn-primary" %>
  <% end %>
</div>
